<h1>Login</h1>

<%= flash[:error] %>

<%= form_tag login_path do %>

  <%= label_tag :email %>
  <%= email_field_tag :email, nil %>
  <br>
  <%= label_tag :password %>
  <%= password_field_tag :password, nil %>
  <br>
  <%= submit_tag "Login" %>
<% end %>


<style>
body{
  color: white;
}
body{background: #111; margin: 0px; }
div#banner{
  width:100%;
  height:500px;
  margin: 0px auto;
  background-color: #000;
  background-image: url('/assets/Earth1.png'), url('/assets/star.png');
  background-repeat: no-repeat, repeat;
  background-position: 120%, 70px, 0px 0px;
  animation: animate-background linear 50s infinite;
}
@keyframes animate-background {
  from { background-position: 120% 70px, 0px 0px; }
  to { background-position: -20% 70px, -1000px 0px; }

}
</style>

<div id="banner">
  <img src="/assets/spaceship.png" alt="">
</div>
