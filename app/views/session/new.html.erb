<h1>Login</h1>

<%= flash[:error] %>

<%= form_tag login_path do %>

  <%= label_tag :email %>
  <%= email_field_tag :email, nil %>
  <br>
  <%= label_tag :password %>
  <%= password_field_tag :password, nil %>
  <br>
  <%= submit_tag "Login" %>
<% end %>


<style>
body{background: #111; margin: 0px; background-image: url('/assets/stars.png');}
