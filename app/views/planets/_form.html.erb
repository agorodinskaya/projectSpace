<%= form_for(@planet, :html => {:multipart => true}) do |f| %>
<% if flash[:errors] %>
  <strong>The following errors need to be corrected:</strong>
  <ol>
    <% flash[:errors].each do |e| %>
    <li>
      <%= e %>
    </li>
    <% end %>
  </ol>
<% end %>
<div class="form-group row">
  <div class="col-sm-10">
  <%= f.select :region_id, Region.pluck(:name, :id) %>
  </div>
</div>
<div class="form-group row">
  <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">
  <%= f.label :name %>
</label>
  <div class="col-sm-10">
  <%= f.text_field :name %>
  </div>
</div>
  <br>

  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">
  <%= f.label :description %>
</label>
    <div class="col-sm-10">
  <%= f.text_field :description %>
</div>
</div>
  <br>
  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">
  <%= f.label "Planet image: " %>
</label>
<div class="col-sm-10">
  <%= f.cl_image_upload :image_url %>
</div>
</div>
  <br>
  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">
  <%= f.label :surface_area %>
</label>
<div class="col-sm-10">
  <%= f.text_field :surface_area %>
</div>
</div>
  <br><div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">
      <%= f.label :surface_gravity %>
    </label>
    <div class="col-sm-10">
      <%= f.text_field :surface_gravity %>
    </div>
  </div>
      <br>
      <br>
  <div class="col-sm-10">
  <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
  </div>

  <% end %>
