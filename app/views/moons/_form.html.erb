<%= form_for @moon do |f| %>
<div class="form-group row">
  <div class="col-sm-10">
  <%= f.select :planet_id, Planet.pluck(:name, :id)%>
  </div>
</div>
<div class="form-group row">
  <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">
  <%= f.label :name %>
</label>
<div class="col-sm-10">
  <%= f.text_field :name %>
  </div>
  </div>
  <br>

  <br>
  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">
  <%= f.label :description %>
</label>
<div class="col-sm-10">
  <%= f.text_field :description %>
</div>
</div>
  <br>
  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">
  <%= f.label :image_url %>
</label>
<div class="col-sm-10">
  <%= f.text_field :image_url %>
  </div>
  </div>
  <br>
  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">
  <%= f.label :surface_area %>
</label>
<div class="col-sm-10">
  <%= f.text_field :surface_area %>
</div>
</div>
  <br>
  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">
  <%= f.label :surface_gravity %>
</label>
<div class="col-sm-10">
  <%= f.text_field :surface_gravity %>
</div>
</div>
  <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
  <% end %>
