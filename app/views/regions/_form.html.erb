<%= form_for @region do |f| %>
<div class="form-group row">
  <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">
  <%= f.label :name %>
</label>
<div class="col-sm-10">
  <%= f.text_field :name %>
</div>
</div>
  <br>
  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">
  <%= f.label :description %>
</label>
  <div class="col-sm-10">
  <%= f.text_field :description %>
</div>
</div>
  <br>
  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">
  <%= f.label :image_url %>
</label>
<div class="col-sm-10">
  <%= f.text_field :image_url %>
</div>
</div>
</div>
</div>
  <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
  <% end %>
