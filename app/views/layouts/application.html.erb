<!DOCTYPE html>
<html>
  <head>
    <title>ProjectSpace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>
  </head>
  <body>

  <nav class="login">
    <% if @current_user.present? %>
    Welcome, <%= @current_user.username %>
    |
    <%= link_to 'Logout', login_path, method: :delete %>
    |
    <%= link_to 'Profile', profile_path %>
    |
    <%= link_to 'Ask question', new_question_path %>
    |
    <%= link_to 'Questions Index', questions_path %>
    <% else %>
    <%= link_to 'Login', login_path %>
    |
    <%= link_to 'Sign up', new_user_path %>
    <% end %>

  </nav>

  <nav class = "menue">
    <ul>
      <%= link_to 'Home', root_path %>
      |
      <%= link_to 'Solar System', regions_path( @region ) %>
      |
      <%= link_to 'Planets', planets_path( @planet ) %>
      |
      <%= link_to 'Moons', moons_path( @moon ) %>
    </ul>
  </nav>
    <%= yield %>
    <div class="stars"></div>
    <div class="twinkling"></div>
    <div class="clouds"></div>
  </body>
</html>
