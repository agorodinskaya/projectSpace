<%= form_for @question do |f| %>
<% if flash[:errors] %>
  <strong>The following errors need to be corrected :</strong>
  <ol>
    <% flash[:errors].each do |e| %>
    <li>
      <%= e %>
    </li>
    <% end %>
  </ol>
<% end %>
<div class="form-group row">
  <div class="col-sm-10">
  <%= f.select :planet_id, Planet.pluck(:name, :id), :include_blank => true %>
</div>
</div>
<div class="form-group row">
  <div class="col-sm-10">
  <%= f.select :moon_id, Moon.pluck(:name, :id), :include_blank => true %>
</div>
</div>
  <br>
<div class="form-group row">
  <label for="colFormLabel" class="col-sm-2 col-form-label col-form-label-sm">
  <%= f.label(:title) %>
</label>
<div class="col-sm-10">
  <%= f.text_field(:title) %>
</div>
</div>
  <br>
<div class="form-group row">
<div class="col-sm-10">
  <%= f.text_area(:body, :size => "50x10") %>
</div>
</div>
  <br>
<div class="col-sm-10">
  <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
</div>

<% end %>
